%nav-ctrl
.col-lg-3
.col-lg-6
  .auth-header 
    %h1.auth-text Log In
  %form{"ng-submit" => "login()"}
    .input-group.col-lg-12
      %input#email.form-control{"ng-model" => "user.email", :placeholder => "Email", :type => "email"}
    .input-group.col-lg-12
      %input#password.form-control{"ng-model" => "user.password", :placeholder => "Password", :type => "password"}
    %input.btn.col-lg-12.task-btn-add{:type => "submit", :value => "Log In"}
  %button.facebook.btn.col-lg-12.project-btn-add{"ng-click" => "authenticate('facebook')"} Sign in with Facebook
